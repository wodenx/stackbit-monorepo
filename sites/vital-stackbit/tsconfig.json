{
  "extends": "../../tsconfig.settings.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "moduleResolution": "node",
    "module": "commonjs",
    "skipDefaultLibCheck": true,
    "noUnusedLocals": true,
    "lib": ["es7", "dom"],
    "types": ["node", "jest"],
    "checkJs": false,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": false,
    "strictNullChecks": true,
    "noEmit": false,
    "resolveJsonModule": true,
  },
  "include": [
    "./src/**/*"
  ]
}