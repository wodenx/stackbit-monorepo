{
  "compilerOptions": {
    "outDir": "lib",
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "skipDefaultLibCheck": true,
    "noUnusedLocals": true,
    "lib": [
      "es7",
      "dom"
    ],
    "types": [
      "jest",
      "node"
    ],
    "checkJs": false,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": false,
    "strictNullChecks": true,
    "useDefineForClassFields": true,
    "baseUrl": "packages",
    "paths": {
      "vital-stackbit": [
        "packages/vital-stackbit/src"
      ]
    }
  }
}